@model myPortfolioSite.Models.ContactEmailForm
@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <div class="col-xs-12">
        <h2 class="text-center">Contact</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-push-3 col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label text-center" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", @placeholder = "Smith Smithy" })
                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label text-center" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", @placeholder = "smithy@smithies.com" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label text-center" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Message, new { @rows = "3", @class = "form-control", @placeholder = "A message is here." })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" name="ContactSend" value="Send" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>